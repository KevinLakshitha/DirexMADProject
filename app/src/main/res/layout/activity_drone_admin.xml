<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ad"
    android:orientation="vertical"
    tools:context=".DroneAdmin">

    <TextView
        android:id="@+id/txtdroneaddmainbar"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_margin="10pt" />

    <TextView
        android:id="@+id/txtDroneAdmin"
        android:layout_width="479dp"
        android:layout_height="69dp"
        android:layout_margin="5pt"
        android:text="@string/txtDroneAdmin"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtAddDrone2Admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5pt"
        android:text="@string/txtdrone2Admin"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etDroneIDAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5pt"
        android:ems="10"
        android:hint="@string/droneid"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B3A4A4" />

    <EditText
        android:id="@+id/etTitleAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5pt"
        android:ems="10"
        android:hint="@string/title"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B3A4A4" />

    <EditText
        android:id="@+id/etPriceAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10pt"
        android:ems="10"
        android:hint="@string/price"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B3A4A4" />

    <EditText
        android:id="@+id/etDescriptionAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5pt"
        android:ems="10"
        android:hint="@string/description"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#B3A4A4" />

    <Button
        android:id="@+id/btnAddDroneADMIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5pt"
        android:text="@string/adddrone" />

    <Button
        android:id="@+id/btnAdminView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="#00A1F8"
        android:text="@string/btnviewadmin"
        android:textColor="#FFFFFF" />
</LinearLayout>