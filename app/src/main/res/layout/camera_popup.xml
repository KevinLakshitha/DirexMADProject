<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#0013D390"
        android:text="Update Details"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/ETUcamid"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/roundedc"
        android:hint="@string/CID"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/ETUcamtitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/roundedc"
        android:hint="@string/cameraTitle"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/ETUcamprice"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/roundedc"
        android:hint="@string/cameraprice"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/ETUcamdis"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/roundedc"
        android:hint="@string/camerades"
        android:textAlignment="center" />


    <Button
        android:id="@+id/btnUpdateLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedc"
        android:backgroundTint="#FFFFFF"
        android:text="UPDATE"
        android:textColor="#FDFDFD"
        android:textSize="20dp"
        app:iconTint="#F6F5F5" />


</LinearLayout>